<% provide(:title, "Random") %>
<% num = get_num %>
<div class="center jumbotron">
<center>
    <h2>You should read:</h2>
    <h1><a href="http://www.scpwiki.com/scp-<%=num%>">SCP-<%=num%></a></h1>
    <div class="btn-group-vertical">
        <%= button_to "Get another suggestion", random_path, method: :get, class: "btn btn-default" %>
        <% if logged_in? %>
        <%= button_to "Add to favorites", favorites_path("favorite" => {"content"=> num}), method: :create, class: "btn btn-default" %>
        <% end %>
    </div>
</center>